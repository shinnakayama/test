import scipy
import numpy as np
import pandas as pd
import pymc3 as pm
import theano.tensor as tt
from sklearn import preprocessing
import arviz as az
from plotnine import *

# dummy data with 5 regions
data = pd.DataFrame()
data['x'] = np.random.normal(0, 1, 100)
data['region'] = np.repeat(range(5), 20)

# regional intercept (global mu = 10, sigma = 10)
intercept = np.random.normal(10, 10, 5)
sd = [1, 2, 3, 4, 5]

# response variable (error = 1)
data['intercept'] = [intercept[x] for x in data.region] 
data['sd'] = [sd[x] for x in data.region]
data['y'] = np.random.normal(data.intercept, data.sd) + 3 * data.x + np.random.normal(0,1,100)

# indexing
region_idx = data.region.values
country_idx = data.index.values


# model input
x = data.x
y = data.y

ggplot(aes(x='x', y='y'), data=data) + geom_point() + facet_wrap('region')


# model
with pm.Model() as model:

    # global intercept
    mu_0 = pm.Normal('mu_0', mu=0, sigma=100)
    sigma_0 = pm.Uniform('sigma_0', lower=0, upper=100, testval=10)

    # regional intercept
    mu_i = pm.Normal('mu_i', mu=mu_0, sigma=sigma_0, shape=len(set(region_idx)))
    sigma_i = pm.Uniform('sigma_i', lower=0, upper=100, testval=[1,2,3,4,5], shape=len(set(region_idx)))

    # national intrecept
    mu_j = pm.Normal('mu_j', mu=mu_i[region_idx], sigma=sigma_i[region_idx], shape=len(set(country_idx)))

    # slope
    beta = pm.Normal('beta', mu=0, sigma=100)

    # model error
    sigma = pm.Uniform('sigma', lower=0, upper=100, testval=1)

    # likelihood
    mu = mu_j[country_idx] + beta * x
    likelihood = pm.Normal('y', mu=mu, sigma=sigma, observed=y)

    # sample
    trace = pm.sample(5000, tune=1000, chains=2)

#pm.summary(trace)
pm.plots.traceplot(trace)
